  },
  "build": {
    "appId": "com.rknjogu.advocates",
    "productName": "RK Njogu Advocates",
    "directories": {
      "buildResources": "public/assets",
      "output": "dist"
    },
    "files": [
      ".next/**",
      "electron/**",
      "public/**",
      "package.json",
      "node_modules/.prisma/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RK Njogu Advocates",
      "installerIcon": "public/assets/icon.ico",
      "uninstallerIcon": "public/assets/icon.ico",
      "uninstallDisplayName": "RK Njogu Advocates",
      "license": "public/assets/license.txt",
      "artifactName": "${productName}-Setup-${version}.exe",
      "include": "electron/installer.nsh"
    }
  }
}
